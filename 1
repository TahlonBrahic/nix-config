{config, localLib, ...}: {
  imports = [ localLib.functions.writeCustomShellApplication ]; 

  config = {
    # Function that creates a custom Waybar Module
    inherit (localLib.functions) writeCustomShellApplication;
    writeCustomWaybarModule = {
      dependencies ? [],
      script ? "",
      text ? "",
      tooltip ? "",
      alt ? "",
      class ? "",
      percentage ? "",
    }:
      writeCustomShellApplication {
        name = "customWaybarModule";
        dependencies = [pkgs.jq] ++ dependencies;
        script = ''
          ${script}
          jq -cn \
            --arg text "${text}" \
            --arg tooltip "${tooltip}" \
            --arg alt "${alt}" \
            --arg class "${class}" \
            --arg percentage "${percentage}" \
            '{text:$text,tooltip:$tooltip,alt:$alt,class:$class,percentage:$percentage}'
        '';
      };
  };
}
